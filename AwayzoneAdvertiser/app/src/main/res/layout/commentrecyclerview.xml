<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/commentpadding"
        android:paddingBottom="@dimen/commentpadding"
        android:paddingLeft="@dimen/commentpadding">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profilepic"
                android:layout_width="@dimen/commentimageview"
                android:layout_height="@dimen/commentimageview"
                android:src="@drawable/facebook"
                android:layout_centerInParent="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/commentappicon">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M Johnson"
                    android:textStyle="bold"
                    android:gravity="top"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/commenttextsize"/>
                <ImageView
                    android:id="@+id/calendericon"
                    android:layout_width="@dimen/defaultimg"
                    android:layout_height="@dimen/defaultimg"
                    android:layout_toRightOf="@+id/username"
                    android:text="@string/calender"
                    android:src="@drawable/calendar"
                    android:layout_marginLeft="@dimen/commentmarginleft"
                    android:textSize="@dimen/commentappicon"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.11.2017"
                    android:layout_marginLeft="@dimen/commentmarginleft"
                    android:layout_toRightOf="@+id/calendericon"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/commentsmalltextsize"/>
                <ImageView
                    android:id="@+id/clockicon"
                    android:layout_width="@dimen/defaultimg"
                    android:layout_height="@dimen/defaultimg"
                    android:layout_toRightOf="@+id/date"
                    android:text="@string/clockA"
                    android:src="@drawable/clock"
                    android:layout_marginLeft="@dimen/commentmarginleft"
                    android:textSize="@dimen/commentappicon"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:45:55 am"
                    android:layout_marginLeft="@dimen/commentmarginleft"
                    android:layout_toRightOf="@+id/clockicon"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/commentsmalltextsize"/>



            </RelativeLayout>
            <TextView
                android:id="@+id/commenttext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ten"
                android:text="@string/profilesteponetext"
                android:textColor="@android:color/black"
                android:textSize="@dimen/commentsmalltextsize"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/black"/>
</LinearLayout>