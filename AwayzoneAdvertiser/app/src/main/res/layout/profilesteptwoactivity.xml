<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/splachd">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">


        <RelativeLayout
            android:id="@+id/profilesecondbackarrowlayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            >
        <ImageView
            android:id="@+id/profilebackarrow"
            android:layout_width="@dimen/defaultimg"
            android:layout_height="@dimen/defaultimg"
            android:src="@drawable/leftarrow"
            android:layout_marginLeft="@dimen/five"
            android:text="@string/leftarrowA"
            android:textSize="@dimen/smallappiconsize"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@+id/profilebackarrow"
            android:layout_centerVertical="true"
            android:textSize="@dimen/toolbartextsizesamll"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            />
        </RelativeLayout>
        <ImageView
            android:id="@+id/logoimg"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/smalllogo"
            android:layout_centerInParent="true" />

        <RelativeLayout
            android:id="@+id/profilesecondnextarrowlayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
        <TextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:textSize="@dimen/toolbartextsizesamll"
            android:textStyle="bold"
            android:layout_marginRight="5dp"/>

            <ImageView
                android:id="@+id/profilesecondnextarrow"
                android:layout_width="@dimen/defaultimg"
                android:layout_height="@dimen/defaultimg"
                android:src="@drawable/right_arrow"
                android:text="@string/rightarrow"
                android:layout_marginRight="@dimen/five"
                android:layout_toRightOf="@+id/next"
                android:textSize="@dimen/smallappiconsize"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutheight"
        android:background="@android:color/white">


        <RelativeLayout
            android:id="@+id/circleonelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/doubleorangeleftarrow"
            android:layout_marginRight="@dimen/ten"
            android:background="@drawable/circleblue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textSize="@dimen/circletextsize"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                />
        </RelativeLayout>


        <ImageView
            android:id="@+id/doubleorangeleftarrow"
            android:layout_width="@dimen/doublearrowimagesize"
            android:layout_height="@dimen/doublearrowimagesize"
            android:layout_alignTop="@+id/doublegreyrightarrow"
            android:layout_marginEnd="14dp"
            android:layout_toStartOf="@+id/circletwolayout"
            android:src="@drawable/doublerightarrowblue" />

        <RelativeLayout
            android:id="@+id/circletwolayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/circledrawable">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textStyle="bold"
                android:textSize="@dimen/circletextsize"
                android:layout_centerInParent="true"
                android:textColor="@color/orange"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/doublegreyrightarrow"
            android:layout_width="@dimen/doublearrowimagesize"
            android:layout_height="@dimen/doublearrowimagesize"
            android:src="@drawable/doublerigtharrow"
            android:layout_toRightOf="@+id/circletwolayout"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ten"
            />
        <RelativeLayout
            android:id="@+id/circlethreelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ten"
            android:layout_toRightOf="@+id/doublegreyrightarrow"
            android:background="@drawable/circlegrey">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textStyle="bold"
                android:textSize="@dimen/circletextsize"
                android:layout_centerInParent="true"
                android:textColor="@color/graye"
                />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutheighttwo">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Looking for your specific culture or a culture you are interested in? Select up to 14"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/five"
            android:layout_marginRight="@dimen/five"
            android:textSize="@dimen/normaltextsizesmall"
            android:gravity="center"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/culturetitletext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:paddingLeft="@dimen/ten"
        android:visibility="gone"
        android:background="@android:color/white"
        android:text="Looking for your specific culture or a culture you are interested in? Select up to 14"
        />

    <ExpandableListView
        android:id="@+id/expandablelist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
    </ExpandableListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@android:color/white"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:titleTextColor="@color/graye"
            android:layout_height="?attr/actionBarSize"
            android:background="@null"
            android:layout_marginRight="@dimen/ten"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:popupTheme="@style/AppTheme.PopupOverlay">
        </android.support.v7.widget.Toolbar>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/signiheight"
            android:visibility="gone"
            android:layout_marginTop="@dimen/five">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/searchculture"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_toLeftOf="@+id/rightlocaiton"
                android:layout_marginLeft="10dp"
                />
            <awayzoneadvertiser.com.advertiser.util.AppIcon
                android:id="@+id/rightlocaiton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/appiconsize"
                android:text="@string/search"
                android:layout_centerVertical="true"
                android:textColor="@color/graye"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            android:background="@color/graye"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/culturerecyclerview"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
       </FrameLayout>
    </LinearLayout>
</LinearLayout>