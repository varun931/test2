<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/square_blue">

    <TextView
        android:id="@+id/startdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Date:"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/square_grey"
        android:orientation="vertical">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="fitXY"
          />




  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="60dp">






    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/clickview"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="12"
        android:layout_gravity="center"
        android:textColor="@color/orange"
        />

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="20dp"
         android:layout_gravity="center">

         <ImageView
             android:layout_width="14dp"
             android:layout_height="14dp"
             android:src="@drawable/impressionsblue"
             android:scaleType="fitXY"
             />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_gravity="center"
             android:gravity="center"
             android:text="@string/impression"
             />

     </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/clickview"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="12"
            android:layout_gravity="center"
            android:textColor="@color/orange"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/blueclicks"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/clicks"
                />
        </LinearLayout>
    </LinearLayout>
  </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/enddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Date:"/>
</LinearLayout>