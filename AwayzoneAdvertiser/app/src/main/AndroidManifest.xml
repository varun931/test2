            </intent-filter>
        </activity>
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
        <activity android:name="MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="SignInActivity"
            android:screenOrientation="portrait"
