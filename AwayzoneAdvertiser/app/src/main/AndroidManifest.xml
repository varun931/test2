            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

        <activity android:name=".CreateAddActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="ProfileStepThreeActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
