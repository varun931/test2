            android:windowSoftInputMode="stateHidden"/>
        <service android:name=".util.GCMTOKEN">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <activity android:name=".DetailScreenActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/googleplacekey" />
        <activity android:name=".cropimage.CropImageActivity"
            android:theme="@style/AppThemeData"
            android:label="Crop Image"
            ></activity>
        <activity android:name=".cropimage.ImagePickerActivity"
            android:label="Pick Image"></activity>
